# Turbo pump speed
record(bo, "$(P)$(R)DROPPER_ON") {
	field(DESC, "Piezo dropper is on")
	field(DTYP, "Soft Channel")
	field(ZNAM, "OFF")
	field(ONAM, "ON")
	field(VAL, "0")	
}
